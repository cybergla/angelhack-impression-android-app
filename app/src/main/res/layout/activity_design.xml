<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#95a5a6"
    android:layout_width="match_parent"
    android:id="@+id/fl_main"
    android:layout_height="match_parent"
    tools:context="com.impression.DesignActivity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="20dp"
     android:id="@+id/ll_back_view"
     android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/card_holder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:text="Select Background color"/>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="20dp"
         android:layout_gravity="center"
         android:orientation="horizontal">
         <View
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:onClick="bgColorClick"
             android:layout_marginRight="30dp"
             android:background="@color/colorAccent"/>
         <View
             android:layout_width="30dp"
             android:onClick="bgColorClick"
             android:layout_height="30dp"
             android:background="@color/colorPrimary"/>
     </LinearLayout>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textStyle="bold"
         android:textSize="15sp"
         android:layout_marginBottom="10dp"
         android:text="Select Font color"/>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="20dp"
         android:layout_gravity="center"
         android:orientation="horizontal">
         <View
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:onClick="fontColorClick"
             android:layout_marginRight="30dp"
             android:background="#fbfcfc"/>
         <View
             android:layout_width="30dp"
             android:onClick="fontColorClick"
             android:layout_height="30dp"
             android:background="#2c3e50"/>
     </LinearLayout>
     <TextView
         android:layout_width="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content"
         android:text="Save"
         android:layout_gravity="center"
         android:textSize="30dp"/>
     <ImageView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_gravity="center"
         android:onClick="saveCard"
         android:padding="10dp"
         android:background="@drawable/circle_fill_red"
         android:src="@drawable/ic_save_black_24dp"/>
 </LinearLayout>

</FrameLayout>
